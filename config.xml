<?xml version='1.0' encoding='utf-8'?>
<widget id="com.YallaGym.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets">
    <name>Yalla Gym</name>
    <description>
        A sample Apache Cordova application that stands for fitness.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        4kSoftTech
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <preference name="Orientation" value="portrait"/>
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashShowOnlyFirstTime" value="false"/>
    <preference name="SplashScreenSpinnerColor" value="#FA9D16"/>
    <preference name="SplashScreenDelay" value="3000"/>
    <preference name="StatusBarOverlaysWebView" value="true"/>
    <platform name="browser">
        <preference name="SplashScreen" value="res/screens/screen-xhdpi-portrait.png"/>
    </platform>
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png"/>
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png"/>
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png"/>
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png"/>
        <splash density="port-hdpi" src="res/screens/screen-hdpi-portrait.png"/>
        <splash density="port-ldpi" src="res/screens/screen-ldpi-portrait.png"/>
        <splash density="port-mdpi" src="res/screens/screen-mdpi-portrait.png"/>
        <splash density="port-xhdpi" src="res/screens/screen-xhdpi-portrait.png"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
